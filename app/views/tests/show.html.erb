<h1>The test by <%= @test.title %> level: <%=@test.level %>.</h1>
<table>
<tr>
  <th>Num</th>
  <th>Question</th>
  <th colspan="2"> Action </th>
</tr>
  <%@test.questions.each do |question| %>
  <tr>
  <td><%=question.id %></td>
  <td><%=question.body %></td>
  <td> <%= link_to 'edit', edit_question_path(question) %></td>
    <td> <%= link_to 'delete', question_path(question), method: :delete, data: {confirm: 'Are you sure?'} %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'All tests', tests_path %> |
<%= link_to 'Edit test', edit_test_path(@test) %>|
<%= link_to 'Add question', new_test_question_path(@test) %>
