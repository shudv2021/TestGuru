  <th><%= t(".num") %></th>
  <th><%= t(".question") %></th>
  <th colspan="2"> <%= t(".acton") %> </th>
</tr>
  <%@test.questions.each do |question| %>
  <tr>
  <td><%=question.id %></td>
  <td><%=question.body %></td>
